<h1>Offers#index</h1>
<p>Find me in app/views/offers/index.html.erb</p>


<% @offers.each do |offer| %>
  <a href="#" class="clickable-card">
    <article>
      <div class="article-wrapper card">
        <figure>
          <img src="https://picsum.photos/id/1011/800/450" alt="" />
        </figure>
        <div class="article-body">
        <div class="">
          <h2><%= offer.name %></h2>
          <p><%= offer.category %></p>
          <div class="read-more">Read more</span>
          </div>
        </div>
    </article>
  <% end %>
</a>
<ul>
      <div id="spe" class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"> <%#= offer.name %></h5>
          <p class="card-text"> <%#= offer.category %></p>
        </div>
      </div>
  </div>
</ul>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
